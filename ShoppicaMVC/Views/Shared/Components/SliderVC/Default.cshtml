@model IEnumerable<ShoppicaMVC.ViewModels.ProductVM>

<div id="product_intro" class="container_12">
    <div id="product_intro_info" class="grid_5">

        <div style="position: relative;">
            <h2><a href="product.html">@Model.ToList()[0].ProductName</a></h2>
            <div class="s_rating_holder">
                <p class="s_rating s_rating_big s_rating_5"> <span style="width: 60%;" class="s_percent"></span> </p>
            </div>
            <p class="s_desc">  @Model.ToList()[0].Description</p>
            <div class="s_price_holder">
                <p class="s_price"> <span class="s_currency s_before">₺</span>@string.Format("{0:0.00}", Model.ToList()[0].UnitPrice)  </p>
            </div>
        </div>
        @for (int i = 1; i < Model.ToList().Count; i++)
        {
            <div style="position: relative; display: none;">
                <h2><a href="product.html">@Model.ToList()[i].ProductName</a></h2>
                <p class="s_desc"> @Model.ToList()[i].Description</p>
                <div class="s_price_holder">
                    <p class="s_price"> <span class="s_currency s_before">₺</span>@string.Format("{0:0.00}", Model.ToList()[i].UnitPrice) </p>
                </div>
            </div>
        }
    </div>
    <div id="product_intro_preview">
        <div class="slides_container">
            @foreach (var item in Model)
            {

                <div class="slideItem" style="display: none; width: 300px; height: 300px; text-align: center; object-fit: scale-down;"><a href="product.html"><img src="~/images/product/@item.Image" alt="" /></a></div>
            }

        </div>
        <a class="s_button_prev" href="javascript:;"></a>
        <a class="s_button_next" href="javascript:;"></a>
    </div>
</div>
