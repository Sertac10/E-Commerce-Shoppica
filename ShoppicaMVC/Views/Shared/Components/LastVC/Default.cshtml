@model IEnumerable<ShoppicaMVC.ViewModels.ProductVM>

@foreach (var item in Model)
{
    <div class="s_item grid_2">
        <a class="s_thumb" href="product.html"><img src="~/images/product/@item.Image" title="@item.ProductName" alt="@item.ProductName" /></a>
        <h3><a href="product.html">@item.ProductName</a></h3>
        <p class="s_model">CategoryName</p>

        @if (item.IsSpecial == false)
        {
            @*normal fiyat*@
            <p class="s_price"><span class="s_currency s_before">₺</span>@string.Format("{0:0.00}", item.UnitPrice)</p>
        }
        else
        {
            @*indirimli fiyat*@
            <p class="s_price s_promo_price"><span class="s_old_price"><span class="s_currency s_before">₺</span>@string.Format("{0:0.00}", item.UnitPrice)</span><span class="s_currency s_before">₺</span>@string.Format("{0:0.00}", item.Discount)</p>

            <a class="s_button_add_to_cart" href="product.html"><span class="s_icon_16"><span class="s_icon"></span>Add to Cart</span></a>
        }
    </div>
}